<div class="box box-warning">
  <div class="box-header with-border">
    <h3 class="box-title"><%= action_message %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <!-- <form role="form"> -->
    <%= form_for [:admin, @vacancy] do |f| %>
    <!-- text input -->
      <div class="row">
        <div class="form-group col-md-5">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control", placeholder: t("placeholder.vacancy_name") %>
        </div>

        <div class="form-group col-md-5">
          <%= f.label :pipeline_id %>
          <%= f.collection_select(:pipeline_id, @pipeline_options_for_select, :id, :name, {}, class:"form-control select2") %>
        </div>

        <div class="form-group col-md-2">
          <div class="check_box">
            <%= f.label :active %>
            <%= f.check_box :active %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-12">
          <%= f.label :description %>
          <%= f.text_area :description, class:"form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-12">
          <%= f.label :perks %>
          <%= f.text_area :perks, class:"form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :min_salary %>
          <%= f.number_field :min_salary, min: 0, class:"form-control" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :max_salary %>
          <%= f.number_field :max_salary, min: 0, class:"form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :start_date %>

          <div class="input-group date">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :start_date, class:"form-control pull-right datepicker" %>
          </div>
          <!-- /.input group -->
        </div>

        <div class="form-group col-md-6">
          <%= f.label :end_date %>

          <div class="input-group date">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :end_date, class:"form-control pull-right datepicker" %>
          </div>
          <!-- /.input group -->
        </div>
      </div>

        <div class="row">
          <div class="col-md-9">
          </div>
          <div class="col-md-3">
            <%= f.button class:"btn btn-primary btn-block btn-flat" do %>
            <%= t('save') %>
            <% end %>
          </div>
        </div>
      </div>

    <% end %>
<!-- </form> -->
  </div>
<!-- /.box-body -->
</div>
